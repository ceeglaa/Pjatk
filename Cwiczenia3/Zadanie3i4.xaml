<Window x:Class="Cwiczenia3.Zadanie3i4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cwiczenia3"
        mc:Ignorable="d"
        Title="Zadanie3i4" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <DataGrid x:Name="StudentsDataGrid" Grid.Row="0" CanUserAddRows="False" IsReadOnly="True" MouseDoubleClick="EditStudent">
        </DataGrid>

        <Label Grid.Row="1" Margin=" 30 10 23 105">Imie</Label>
        <TextBox Grid.Row="1" x:Name="Name"  Margin=" 150 10 23 105" />
        <Label Grid.Row="1" Margin=" 30 40 23 75">Nazwisko</Label>
        <TextBox Grid.Row="1" x:Name="Last_Name"  Margin=" 150 40 23 75" />
        <Label Grid.Row="1" Margin=" 30 70 23 45">Numer indeksu</Label>
        <TextBox Grid.Row="1" x:Name="Index_Number"  Margin=" 150 70 23 45" />
        <Button Grid.Row="1" x:Name="Add" Margin=" 15 105 600 15">
            Add
        </Button>
        <Button Tag="StudentsDataGrid" Grid.Row="1" x:Name="Delete" Margin=" 600 105 23 15">
            Delete
        </Button>

    </Grid>
</Window>
