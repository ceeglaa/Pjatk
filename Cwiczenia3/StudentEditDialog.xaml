<Window x:Class="Cwiczenia3.StudentEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cwiczenia3"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="StudentEditDialog" Height="450" Width="800">
    <Grid>
        <Label Grid.Row="1" Margin=" 30 40 23 350">Imie</Label>
        <TextBox Grid.Row="1" x:Name="Name"  Margin=" 150 40 23 350" />
        <Label Grid.Row="1" Margin=" 30 90 23 300">Nazwisko</Label>
        <TextBox Grid.Row="1" x:Name="Last_Name"  Margin=" 150 90 23 300" />
        <Label Grid.Row="1" Margin=" 30 140 23 250">Numer indeksu</Label>
        <TextBox Grid.Row="1" x:Name="Index_Number"  Margin=" 150 140 23 250" />
        <Button Grid.Row="1" x:Name="Close_Button" Margin=" 15 200 15 180">
            Zamknij
        </Button>
    </Grid>
</Window>
